<!-- views/addresses.handlebars -->
    <div class="panel panel-primary">
       <div class="panel-heading">
          <h3 class="panel-title">Proposal Discussion</h3>
       </div>
       <div class="panel-body">
          <p>Description: {{proposal.description}}</p>
          <p>Requested amount: {{proposal.requested_amount}}</p>
          <p>Payment address: {{proposal.payment_address}}</p>
          <p>Project duration: {{floor (divide proposal.proposal_duration 60)}} minutes</p>
    {{#if user}}
    <p><a data-toggle="collapse" href="#votecommands" class="btn btn-warning" role="button"><span class="glyphicon"></span> Show commands to vote</a></p>
    <div class="collapse" id="votecommands">
    <div class="panel panel-success">
       <div class="panel-heading">
          <h3 class="panel-title">Vote Yes</h3>
       </div>
       <div class="panel-body">
          <span class="clipboard">proposalvote {{proposal.hash}} yes</span>
       </div>
    </div>
    <div class="panel panel-danger">
       <div class="panel-heading">
          <h3 class="panel-title">Vote No</h3>
       </div>
       <div class="panel-body">
          <span class="clipboard">proposalvote {{proposal.hash}} no</span>
       </div>
    </div>
    </div>
    {{/if}}
       </div>
    </div>

    {{#each messages}}
    <div class="panel panel-default">
       <div class="panel-heading">
          <span class="panel-title"><b>{{this.username}}</b></span> (approx {{floor (multiply 20160 this.balance)}} votes per period) said {{formatRelative this.time}}:
       </div>
       <div class="panel-body">
         {{ this.comment }}
       </div>
    </div>
    {{/each}}

    <div class="panel">
       <div class="panel-heading">
          <h3 class="panel-title">Add your comment</h3>
       </div>
       <div class="panel-body">
          <form id="add-address" action="/discussion/{{hash}}" method="post">
             <div>
                <label>Comment:</label>
                <textarea class="form-control form-control-lg" name="comment"></textarea>
             </div>
            <div style="margin-top:15px">
               <input type="submit" class="btn btn-primary mb2" value="Send"/>
            </div>
         </form>
      </div>
   </div>



