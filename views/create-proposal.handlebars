<!-- views/signin.handlebars -->
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">Create Proposal</div>
        <div class="panel-body">
            <div>
              <p></p>
              <label>NavCoin Address:</label>
              <input class="form-control form-control-lg"  type="text" id="address" name="address"/>
            </div>
            <div>
              <p></p>
              <label>Requested Amount:</label>
              <input class="form-control form-control-lg"  type="text" id="amount" name="amount"/>
            </div>
            <div>
              <p></p>
              <label>Description:</label>
              <input class="form-control form-control-lg"  type="text" id="description" name="description"/>
            </div>
            <div>
              <p></p>
              <label>Proposal duration:</label>
              <input type="text" class="form-control form-control-lg duration-picker" id="duration" name="duration" value="93780">
            </div>

            <div style="margin-top:15px">
              <input type="submit" class="btn btn-primary btn-sm" value="Generate Command" onmousedown="if(address.value&&amount.value&&description.value&&duration.value){warning.style.display='none';command.style.display='block';a.innerHTML='createproposal '+address.value+' '+amount.value+' '+duration.value+' &#34;'+description.value+'&#34;'}else{warning.innerHTML='Fill the form';warning.style.display='block';command.style.display='none';return;}"/>
            </div>
            <br>
            <div class="col-md-4 alert alert-danger" style="display:none" id="warning"></div>
        </div>
      </div>
  </div>
</div>  
<div id="command" style="display:none;text-align:center">
 <p><br>Open your NavCoin Core Wallet's debug console, copy this command and run it in your wallet:<br><br><b><span id="a" class="clipboard"></span></b>
</div>

<script type="text/javascript">
$('.duration-picker').durationPicker();
</script>
